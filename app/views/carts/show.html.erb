<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
          <% if active_sale? %>
          <th>Discount</th>
          <%end%>
        </tr>
      </thead>
      <tbody>
        <% enhanced_cart.each do |item| %>
          <%= render 'item', product: item[:product], quantity: item[:quantity].to_i, discount: item[:sales_discount] %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan= <%= active_sale? ? "5" : "4" %>>
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol (get_discount_price?(cart_subtotal_cents / 100.0)) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= form_tag orders_path do %>
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-amount="<%= get_discount_price?(cart_subtotal_cents) %>"
          data-name="Jungle"
          data-description= "<%=current_user ? "#{current_user.name}\'s Jungle Order" : "Guest's Jungle Order"%>"
          data-locale="auto"
          data-email= <%=current_user ? current_user.email : ""%>
          data-currency="cad">
        </script>
      <% end %>
    </div>
  </div>
</section>
