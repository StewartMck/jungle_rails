	<div class="dialog-login">
		<div class="dialog-login-content">
			<div class="dialog-login-header">			
        <% if flash.any? %>
            <% flash.each do |type, msg| %>
             <div class="alert alert-warning">
               <%= msg %>
             </div>
            <% end %>
      <% end %>
				<h4 class="dialog-login-title">Login</h4>	
		  </div>
			<div class="dialog-login-body">
      <%= form_for :sessions do |f| %>
      <div class="form-group">
      <%= f.text_field :email, class: "form-control", placeholder: "Email Address", required:"required"  %>
      </div>
      <div class="form-group">
       <%= f.password_field :password, class: "form-control",placeholder: "Password", required:"required"%>
       </div>
       <div class="form-group">
       <%= f.submit "Login",class:"btn btn-primary btn-lg btn-block login-btn"%>
       </div>
       <% end %>
		</div>
  </div>
 </div>