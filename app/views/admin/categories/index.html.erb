<section class="admin-category-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
  <%= form_for :category do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
  <br/>
  <%= form.submit '+ New Category', class: 'btn btn-info'%>
  <% end %>
  </div>
 
  <div class="panel panel-default category">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="width: 95%">Category</th>
        </tr>
      </thead>
       <tbody>
        <% @categories.each do |item| %>
        <tr>
         <td><%=item[:name]%></td>
          <td> <%= link_to fa_icon('trash'), [:admin, item], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
